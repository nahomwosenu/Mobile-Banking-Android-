<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="g4it.finalproject.mobilebanking.CheckBalance"
    tools:showIn="@layout/activity_check_balance">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="262dp"
        android:layout_height="29dp"
        android:text="Check Your Balance"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCheckBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/labelCheckResult"
        tools:layout_editor_absoluteX="104dp" />

    <TextView
        android:id="@+id/labelCheckResult"
        android:layout_width="335dp"
        android:layout_height="253dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="33dp"
        android:text="Your Current Balance"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-10dp"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelCheckResult" />
</android.support.constraint.ConstraintLayout>
