<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g4it.finalproject.mobilebanking.USSDMenu"
    android:id="@+id/constraintLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:text="Main Menu"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:layout_editor_absoluteY="27dp"
        tools:layout_editor_absoluteX="22dp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:text="Next"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/mainMenu"
        android:layout_width="353dp"
        android:layout_height="309dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="101dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <RadioButton
            android:id="@+id/optionCheckBalance"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="Check Balance" />

        <RadioButton
            android:id="@+id/optionDeposite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/optionCheckBalance"
            android:layout_alignStart="@+id/optionCheckBalance"
            android:layout_below="@+id/optionCheckBalance"
            android:layout_marginTop="12dp"
            android:text="Fund Deposite" />

        <RadioButton
            android:id="@+id/optionWithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/optionDeposite"
            android:layout_alignStart="@+id/optionDeposite"
            android:layout_below="@+id/optionDeposite"
            android:layout_marginTop="13dp"
            android:text="Fund Withdrawal" />

        <RadioButton
            android:id="@+id/optionTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/optionCheckBalance"
            android:layout_alignLeft="@+id/optionWithdraw"
            android:layout_alignRight="@+id/optionCheckBalance"
            android:layout_alignStart="@+id/optionWithdraw"
            android:layout_below="@+id/optionWithdraw"
            android:layout_marginTop="18dp"
            android:text="Fund Transfer" />

        <RadioButton
            android:id="@+id/optionChangePin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/optionTransfer"
            android:layout_alignStart="@+id/optionTransfer"
            android:layout_below="@+id/optionTransfer"
            android:layout_marginTop="19dp"
            android:text="Change PIN" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
